<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:id="@+id/Start_end" >
        <Button android:layout_width="0dp" android:layout_height="wrap_content" android:text="Start_end"
            android:id="@+id/btnStart" android:layout_weight="1" android:src="@drawable/start"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_below="@+id/Start_end"
        android:layout_height="wrap_content" android:paddingBottom="25dp"
        android:layout_alignParentTop="false" android:layout_alignParentRight="false"
        android:id="@+id/fare">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fare"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvFare"
            android:layout_alignParentTop="true"
            android:text="0.0"
            android:layout_centerHorizontal="true" android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="lkr"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_below="@+id/fare"
        android:layout_height="wrap_content" android:paddingBottom="25dp"
        android:layout_alignParentRight="false"
        android:id="@+id/distance">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Distance"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvDistance"
            android:layout_alignParentTop="true"
            android:text="0.0"
            android:layout_centerHorizontal="true" android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="km"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_below="@+id/distance"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:paddingBottom="25dp"
        android:id="@+id/wait_time">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Wait time"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvWait"
            android:layout_alignParentTop="true"
            android:text="0.0"
            android:layout_centerHorizontal="true" android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="mins"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_below="@+id/wait_time"
        android:layout_alignParentRight="false" android:paddingBottom="25dp"
        android:id="@+id/Speed">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Speed"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvSpeed"
            android:layout_alignParentTop="true"
            android:text="0.0"
            android:layout_centerHorizontal="true" android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent" android:layout_below="@+id/Speed"
            android:layout_height="wrap_content" android:paddingBottom="25dp"
        android:layout_alignParentLeft="true" android:id="@+id/linearLayout3">
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:id="@+id/btnSettings" android:layout_weight="1"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="History"
                android:id="@+id/btnHistory" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="print"
            android:id="@+id/print" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="tariff"
            android:id="@+id/tariff" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/llGPSStatus" android:layout_below="@+id/linearLayout3"
                  android:layout_centerHorizontal="true">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="Статус GPS"
                  android:layout_weight="1"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Не найдено"
                  android:id="@+id/tvGPSStatus"
                  android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                  android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
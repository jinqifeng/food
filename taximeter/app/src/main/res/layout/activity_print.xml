<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.chaoyu.jongwn.taximeter.PrintActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <include layout="@layout/content_print" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d9d7d7"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="26dp" android:layout_marginRight="26dp"
        >

        <Button
            android:id="@+id/btn_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:text="Enaable Bluetooth" />

        <Spinner
            android:id="@+id/sp_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" android:visibility="gone"
            android:layout_alignParentTop="true"/>

    </RelativeLayout>
    <View
        android:layout_marginTop="145dp"
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ff8800"/>
    <LinearLayout
        android:orientation="vertical" android:layout_marginTop="160dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:paddingBottom="25dp"
        android:layout_marginLeft="24dp" android:layout_marginRight="24dp"
        android:layout_alignParentLeft="true" android:id="@+id/linearLayout3">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingTop="25dp"
            android:text="PRINT" android:paddingBottom="25dp"
            android:id="@+id/btnPrint" android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent" android:layout_marginTop="20dp"
            android:layout_height="wrap_content"  android:paddingTop="25dp"
            android:text="PREVIEW" android:paddingBottom="25dp"
            android:id="@+id/btnPreview" android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"  android:layout_marginTop="20dp"
            android:layout_height="wrap_content"  android:paddingTop="25dp"
            android:text="CONNECT PRINTER" android:paddingBottom="25dp"
            android:id="@+id/btnConnect" android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"  android:layout_marginTop="20dp"
            android:layout_height="wrap_content"  android:paddingTop="25dp"
            android:text="DISCONNECT PRINTER" android:paddingBottom="25dp"
            android:id="@+id/btnDisconnect" android:layout_gravity="center_horizontal" android:layout_weight="1"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:keepScreenOn="true"
    android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BES "

            android:textColor="#fcff66"
            android:textSize="35dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taxi Meter"

            android:textColor="#ffffff"
            android:textSize="35dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar" android:layout_alignParentRight="false"
        android:id="@+id/Fare">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fare"

            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:gravity="right"
                android:id="@+id/fare_unit"
                android:text="Rs:"
                android:textSize="15dp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tvFare"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="left"

                android:text="50.00"
                android:textColor="#edff1a00"
                android:textSize="65dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" android:id="@+id/Distance"
        android:layout_height="wrap_content" android:layout_below="@+id/Fare">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Distance"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFare"
            android:layout_marginRight="10dp"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:text="0.0"
            android:textColor="#edff1a00"
            android:textSize="65dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="km"
            android:id="@+id/distance_unit"
            android:textColor="#ffffff"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" android:id="@+id/WaitTime"
        android:layout_height="wrap_content" android:layout_below="@+id/Distance">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Wait Time"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWaitTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDistance"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"

            android:layout_marginRight="10dp"

            android:fontFamily="serif"
            android:text="0.0"
            android:textColor="#edff1a00"
            android:textSize="65dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="mins"
            android:textColor="#ffffff"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:id="@+id/Speed"
        android:layout_height="wrap_content" android:layout_below="@+id/WaitTime">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Speed"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_weight="0.3"
            />

        <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="right"
            android:text="waiting"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#edff1a00"

            android:textSize="35dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:text="km/h"
            android:id="@+id/dd"
            android:gravity="bottom|right"
            android:layout_weight="0.1"
            android:textColor="#ffffff"
            android:visibility="invisible"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent" android:layout_below="@+id/Speed"
        android:layout_height="wrap_content" android:paddingBottom="5dp"
        android:orientation="horizontal" android:paddingTop="5dp"
        android:layout_alignParentRight="true" android:layout_alignParentLeft="true"

        android:id="@+id/Start_end">

        <Button
            android:id="@+id/btnStart"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape4"
            android:elevation="9dp"
            android:ellipsize="middle"
            android:fadingEdge="vertical"
            android:soundEffectsEnabled="false"
            android:text="START"

            tools:shadowColor="@color/cardview_dark_background"
            tools:shadowRadius="2" />

        <Button
            android:id="@+id/btnEnd"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_shape2"
            android:enabled="false"
            android:text="END" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:gravity="center_horizontal"
        android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
         android:paddingTop="3dp"
        android:id="@+id/RiderPhoneNumber" android:layout_below="@+id/Start_end"
        >

        <EditText android:layout_width="0dp" android:layout_height="match_parent"

            android:id="@+id/teRiderPhone"
            android:background="#ff8855"
            android:textColor="#0000ff"
            android:inputType="number"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="Send"
            android:textSize="12dp"
            android:background="#fcff66"
            android:id="@+id/btnSend"  android:layout_weight="0.6"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal" android:paddingTop="5dp"
        android:layout_width="match_parent" android:layout_below="@+id/RiderPhoneNumber"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout3">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp" android:layout_marginLeft="6dp"
            android:background="@drawable/button_shape3"
            android:src="@drawable/ic_local_printshop_white_24dp"
            android:id="@+id/btnPrint" />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape3" android:layout_marginLeft="12dp"
            android:src="@drawable/ic_list_white_24dp"
            android:id="@+id/btnHistory"  />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape3" android:layout_marginLeft="12dp"
            android:src="@drawable/ic_description_white_24dp"
            android:id="@+id/btnTariff" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="60dp"
            android:layout_height="40dp"

            android:background="@drawable/button_shape3" android:layout_marginLeft="12dp"
            android:src="@drawable/ic_settings_white_24dp"
           />
    </LinearLayout>





</RelativeLayout>
